
<body background="nosepicking.jpg">

	<h1>Welcome to Pairs Picker!</h1>
	<p><%= session[:message]%></p>

	<form action="/pairs" method="post">
		<input type="text" name="name" placeholder ="Enter a name" autofocus required>
		<input type="submit">
	</form>

	<form action="/show_pairs" method="get">
		<input type="submit" value ="Get Pairings">
	</form>

	<% session[:names].each do |name|%>
	
	<% if name.nil? %>
	<% else %>
	<h2><%= name %> - Is on the List!</h2>
	<%end%>
	<%end%>

</body>